{
  "name": "urjja-pratishthan-prakashalay-backend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "start:production": "NODE_ENV=production node src/server.js",
    "build": "echo 'Backend build completed - no transpilation needed for Node.js'",
    "test": "node --test src/__tests__/*.test.js",
    "test:watch": "node --test --watch src/__tests__/*.test.js",
    "test:coverage": "node --test --experimental-test-coverage src/__tests__/*.test.js",
    "lint": "echo 'Linting not configured - consider adding ESLint'",
    "validate-env": "node src/scripts/validateEnv.js",
    "setup-production": "node src/scripts/setupProduction.js",
    "seed": "node src/scripts/seedData.js",
    "migrate": "node src/scripts/migrate.js",
